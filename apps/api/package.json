{
  "name": "@sourcer/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc -b tsconfig.json && pnpm run copy:html",
    "build:debug": "tsc -b tsconfig.json && pnpm run copy:html",
    "build:ts": "tsc -b tsconfig.json",
    "copy:html": "cpx \"src/**/*.html\" dist",
    "dev": "ts-node-dev --respawn --transpile-only --project tsconfig.json src/index.ts",
    "start": "node dist/index.js",
    "app": "node dist/index.js",
    "test": "cross-env NODE_ENV=test vitest run",
    "cover": "cross-env NODE_ENV=test vitest run --coverage"
  },
  "dependencies": {
    "@sourcer/core": "workspace:*",
    "body-parser": "^1.19.0",
    "connect-mongo": "^6.0.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "moment": "^2.24.0",
    "mongodb": "^6.3.0",
    "mongoose": "^9.1.6",
    "vm2": "^3.8.4"
  },
  "devDependencies": {
    "@deboxsoft/cpx": "^1.5.0",
    "@types/body-parser": "^1.17.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.15.15",
    "@types/mongodb": "^3.3.10",
    "@types/node": "^20.11.30",
    "cross-env": "^6.0.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "@vitest/coverage-v8": "^1.5.2",
    "vitest": "^1.5.2"
  }
}
